<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="450dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Please choose a game to create topic about:"
        android:padding="5dp"

        />



    <EditText
        android:id="@+id/create_new_topic_dialog_topic_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint="enter topic's title"

        />

    <EditText
        android:id="@+id/create_new_topic_dialog_massage_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint="enter your massage here"

        />

    <ImageButton
        android:id="@+id/create_new_topic_dialog_imageBtn"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_send"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/create_new_topic_dialog_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        />



</LinearLayout>