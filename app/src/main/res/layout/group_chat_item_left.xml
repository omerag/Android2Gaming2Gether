<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/show_sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_str"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@id/show_message"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:padding="3dp"
        android:background="@drawable/group_background_left_up"/>

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_sender_name"
        android:text="@string/hello_str"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/group_background_left_down"/>

</RelativeLayout>